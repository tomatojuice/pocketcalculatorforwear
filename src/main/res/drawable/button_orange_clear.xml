<selector xmlns:android="http://schemas.android.com/apk/res/android" >

	<!-- ボタン押下時の配色 -->
    <item android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" >
		<stroke android:width="1dp" android:color="@color/orange_50" />
		<corners android:radius="3dp" />
	    <gradient
	        android:angle="270"
	        android:startColor="@color/orange_a100"
	        android:centerColor="@color/orange_a100"
	        android:endColor="@color/orange_a100"
	        android:type="linear"
	        android:centerX="0.5"
	        android:centerY="0.5"
	    />
	</shape>
    </item>

    <!-- ボタン未押下時の配色 -->
    <item android:state_pressed="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" >
		<stroke android:width="1dp" android:color="@color/orange_a700" />
		<corners android:radius="3dp" />
	    <gradient
	        android:angle="270"
	        android:startColor="@color/orange_a700"
	        android:centerColor="@color/orange_a700"
	        android:endColor="@color/orange_a700"
	        android:type="linear"
	        android:centerX="0.5"
	        android:centerY="0.5"
	    />
	</shape>
    </item>

</selector>